# Переменные окружения для Telegram Bot
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# База данных PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/tg_analytics

# Настройки безопасности
ADMIN_USERS=123456789,987654321  # ID администраторов через запятую
SECRET_KEY=your_secret_key_here

# Настройки расписания (часовой пояс)
TIMEZONE=Europe/Moscow

# Настройки отчетов
REPORTS_CHAT_ID=-1001234567890  # ID чата для отправки отчетов

# Railway настройки (автоматически подставляются)
PORT=8000
